<div class="gradient-bg">
<h1>Listing Contacts</h1>
</div>

<table>
  <tr class="headings">
    <th>Name</th>
    <th>Title</th>
    <th>Email</th>
    <th>Phone number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr class="<%= cycle 'odd', 'eve' %>">
    <td><%= contact.name %></td>
    <td><%= contact.title %></td>
    <td><%= contact.email %></td>
    <td><%= contact.phone_number %></td>
    <td><%= button 'Show', contact %></td>
    <td><%= button 'Edit', edit_contact_path(contact) %></td>
    <td><%= button_to 'Destroy', contact, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button 'New Contact', new_contact_path %>
