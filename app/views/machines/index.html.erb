<h1>Listing machines</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @machines.each do |machine| %>
  <tr>
    <td><%= machine.name %></td>
    <td><%= link_to 'Show', machine %></td>
    <td><%= link_to 'Edit', edit_machine_path(machine) %></td>
    <td><%= link_to 'Destroy', machine, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="user_nav">
  <%= button_to "Home", root_path %>
  <% if current_user %>
      logged in as <%=  current_user.username.titleize %>.
      <%= link_to "Log out", logout_path %>
  <% else %>
      <%= link_to "Sign Up", signup_path %>,
      <%= link_to "Log In", login_path %>, or
      <%= link_to "Log In with Google", auth_at_provider_path(provider: :google) %>
  <% end %>
</div>

<%= link_to 'New Machine', new_machine_path %>
